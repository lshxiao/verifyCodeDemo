.input-box{
  position: relative;
  width: 400rpx;
  height: 100rpx;
  margin: 30rpx auto;
}
.title{
  padding: 50rpx 0 0;
  font-size: 36rpx;
  color: #333;
  text-align: center;
}
.input-box image{
  position: absolute;
  left: 0;
  top: 0;
  z-index: 10;
  width: 100%;
  height: 100%;
}
.input-num{
  position: absolute;
  top: 0;
  z-index: 11;
  font-size: 56rpx;
  font-weight: 900;
  color: #0ff;
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}
.input-num-0{
  left: 0;
}
.input-num-1{
  left: 100rpx;
}
.input-num-2{
  left: 200rpx;
}
.input-num-3{
  left: 300rpx;
}
.input-box input{
  position: absolute;
  left: 10rpx;
  top: 10rpx;
  z-index: 1;
  opacity: 0;
  color: transparent;
  font-size: 0rpx;
}